    /* || Products Page */
.product-title {
    text-align: center;
    padding: 20px 0 0 0;
    font-family: var(--schoolbell);
}

.product-title-alt {
    background:  var(--white);
    font-family: var(--schoolbell);
    text-align: center;
    margin: 0;
    padding: 20px 0 0 0;
}

.card-wrapper {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    padding: 15px 0;
    line-height: 1.75em;
}

.card-wrapper-alt {
    background:  var(--white);
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    padding: 15px 0;
    line-height: 1.75em;
}

.cards {
    border-radius: 10px;
    flex: 20%;
    max-width: 20%;
    height: 100%;
    margin: 15px;
    display: block;
    background:  var(--white);
}

.cards-alt {
    background: var(--pink) !important;
}

.cards-body {
    margin: 0;
    padding: 5px;
}

.cards-body img {
    height: 20vh;
    margin: 0;
    width: 100%;
    border-radius: 10px 10px 0 0;
}

.card-title {
    font-size: 20px;
    text-align: center;
}

.card-info {
    padding: 0 5px;
}

.card-price {
    text-align: right;
    margin-bottom: 0;
}